@model Doge.Models.DogeBigImage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<input type="hidden" asp-for="Id" />
<div>
    <h4>DogeImage</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            FullImage
        </dt>
        <dd class="col-sm-10">
            <img class="card-img-top"
                 @{
                     string imgsrc = "";
                     if (Model.Image != null)
                     {
                         var b64 = Convert.ToBase64String(Model.Image);
                         imgsrc = string.Format("data:image/jpg;base64,{0}", b64);
                     }
                     else
                     {
                         imgsrc = Model.DogeSmallImage.URL;
                     }
                 }
                     src="@imgsrc">
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Index">Back to List</a>
    <a class="btn btn-info" asp-action="Approve" asp-route-id="Id">Approve</a>
</div>
